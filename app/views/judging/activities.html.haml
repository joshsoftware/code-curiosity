.row
  %section.content
    .col-md-2
      = render 'sidebar_filters'
    .col-md-10
      .box.box-primary
        .box-header.with-border
          %h3.box-title Activities
          .box-tools.pull-right.commits-tools#activities_pagination
            = paginate @activities, remote: true, window: 1, outer_window: 1 
        .box-body#activities
          = render partial: 'activity', collection: @activities
:javascript
  showRatingControl();
