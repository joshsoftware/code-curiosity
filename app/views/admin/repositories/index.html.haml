%section.content-header
  %h1
    Repositories:-
    %label.slide
      %input#repo{ :checked => "checked", :type => "checkbox", data: {toggle: 'toggle', width: 100, height: 40, on: "Required", off: "Ignored"}}

%section.content
  .row
    .col-xs-12
      .box.box-primary
        .box-header
          %h3.box-title
            %span Repositories:
          .box-tools
            = form_tag(search_admin_repositories_path, method: :get, class: 'col-xs-2 col-md-4 pull-right') do
              .input-group.input-group-sm
                = text_field_tag('q', params[:q], class: 'form-control pull-right', placeholder: 'Repository name')
                .input-group-btn
                  %button.btn.btn-default{type: 'submit'} Go
        .box-body.table-responsive
          - if @repos.any?
            = render 'repos_table'
            .pagination-container
              = paginate @repos, remote: true

.modal.fade#assign_judge_form
